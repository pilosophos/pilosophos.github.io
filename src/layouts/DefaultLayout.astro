---
import Favicon from '../components/Favicon.astro'
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import '../styles/global.css';

const { title, metadesc, ogType, ogImage } = Astro.props;
const site = Astro.site;
const pageUrl = site + Astro.url.pathname.slice(1);

const defaultDescription = "Home to the art, writing, and software of Pilosophos, a digital artist born and raised on the internet.";
---
<!DOCTYPE html>
<html lang="en" class="bg-pi-gray bg-texture-dots text-green-50 h-full">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <Favicon />
  <meta property="og:title" content={ title + " | Pilosophos' Circle" } />
  <meta property="og:type" content={ ogType || "website" } />
  <meta property="og:image" content={ ogImage || `${site}images/malaszec-pfp.png` } />
  <meta property="og:url" content={ pageUrl } />
  <meta property="og:description" content={ metadesc || defaultDescription } />
  <meta name="description" content={ metadesc || defaultDescription}>
  <title>{ title } | Pilosophos' Circle</title>
</head>
<body class="h-full">
  <Header />
  <slot />
  <Footer />
</body>
</html>
