---
import SmallIconLink from "./SmallIconLink.astro";
---

<header class="container flex flex-col items-center gap-3 p-3 border-b border-stone-500 md:flex-row md:items-start mb-5">
  <div class="h-16 md:w-1/2">
    <a href="/" class="flex w-fit hover:text-pi-cyan">
      <img src="/images/malaszec-logo-inverted.svg" class="w-15" />
      <div class="flex flex-col justify-center items-center text-center ms-3">
        <h1 class="font-display text-2xl md:text-3xl lg:text-4xl">Pilosophos' Circle</h1>
        <span class="hidden w-max md:block">Born and raised on the internet</span>
      </div>
    </a>
  </div>

  <nav class="flex flex-col items-center text-base lg:text-2xl md:w-1/2 md:items-end">
    <ul class="flex justify-center md:justify-end gap-x-5 flex-wrap">
      <li class="flex-shrink-0">
        <SmallIconLink noUnderline
          label="Art"
          icon="/images/icons/tiny/paint_file-0.png"
          href="/art"
        />
      </li>
      <li class="flex-shrink-0">
        <SmallIconLink noUnderline
          label="Writing"
          icon="/images/icons/tiny/winrep-0.png"
          href="/writing"
        />
      </li>
      <li class="flex-shrink-0">
        <SmallIconLink noUnderline
          label="Support&nbsp;me"
          icon="/images/icons/heart.png"
          href="/support-me"
        />
      </li>
      <li class="flex-shrink-0">
        <SmallIconLink noUnderline
          label="About"
          icon="/images/icons/tiny/help_question_mark-1.png"
          href="/about"
        />
      </li>
      <div class="hidden lg:block lg:basis-full lg:h-0"></div>
      <li class="text-base">
        <SmallIconLink noUnderline
          label="Interests"
          icon="/images/icons/tiny/paint_old-1.png"
          href="/interests"
        />
      </li>
      <li class="text-base">
        <SmallIconLink noUnderline
          label="Recommendations"
          icon="/images/icons/tiny/trust0-1.png"
          href="/recommendations"
        />
      </li>
      <li class="text-base">
        <SmallIconLink noUnderline
          label="Homelab"
          icon="/images/icons/tiny/network_normal_two_pcs-1.png"
          href="/homelab"
        />
      </li>
      <li class="text-base">
        <SmallIconLink noUnderline
          label="Software"
          icon="/images/icons/tiny/appwizard-0.png"
          href="/software"
        />
      </li>
      <li class="text-base">
        <SmallIconLink noUnderline
          label="Demos"
          icon="/images/icons/tiny/color_profile.png"
          href="/demos"
        />
      </li>
      <li class="text-base">
        <SmallIconLink noUnderline
          label="Links"
          icon="/images/icons/tiny/internet_connection_wiz.png"
          href="/links"
        />
      </li>
    </ul>
  </nav>
</header>